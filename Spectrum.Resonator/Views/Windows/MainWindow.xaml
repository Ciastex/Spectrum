<atlas:Window x:Class="Spectrum.Resonator.Views.Windows.MainWindow"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:atlas="clr-namespace:Atlas.UI;assembly=Atlas.UI"
              xmlns:vm="clr-namespace:Spectrum.Resonator.ViewModels"
              Title="MainWindow"
              Width="800"
              Height="450"
              Background="#2D2D30"
              CanMaximize="False"
              ShowMaximizeButton="False"
              ShowShadeButton="False">
    <atlas:Window.DataContext>
        <vm:MainWindowViewModel />
    </atlas:Window.DataContext>

    <Grid>
        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="{Binding TestBindableString}" />

        <atlas:Button HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      Command="{Binding ClickityClickCommand}"
                      Content="Click!" />
    </Grid>
</atlas:Window>
