<UserControl x:Class="Spectrum.Resonator.Views.Miscellaneous.StatusBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mx="clr-namespace:Spectrum.Resonator.Infrastructure.MarkupExtensions"
             xmlns:vm="clr-namespace:Spectrum.Resonator.ViewModels"
             DataContext="{mx:DataContextSource vm:StatusBarViewModel}">
    <Grid Background="#007ACC">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0"
                   Margin="4,0,10,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Text="{Binding ActionInfo, TargetNullValue='Idle', UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Grid.Column="1"
                   Margin="10,0,4,0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Text="{Binding DetailedStatus, TargetNullValue='Waiting for user input...', UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</UserControl>
